    <field name="created_by" type="createdby" default="0" label="COM_BANNER_FORM_LBL_IMAGES_CREATED_BY" description="COM_BANNER_FORM_DESC_IMAGES_CREATED_BY" hidden="true" hint="COM_BANNER_FORM_LBL_IMAGES_CREATED_BY"/>
