    <field name="text_banner" type="editor" editor="|" filter="JComponentHelper::filterText" label="COM_BANNER_FORM_LBL_IMAGES_TEXT_BANNER" description="COM_BANNER_FORM_DESC_IMAGES_TEXT_BANNER" hint="COM_BANNER_FORM_LBL_IMAGES_TEXT_BANNER"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
